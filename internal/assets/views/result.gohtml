<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{or .Form.Title .Form.Name .Form.Table}}</title>
    <link rel="stylesheet" href="../static/css/bulma.min.css">
</head>
<body>
<section class="section">
    <div class="container">
        <div class="box">
            {{if .Error}}
                <div class="notification is-danger">
                    {{($.Render $.Form.Failed ) | markdown}}
                </div>
            {{- else}}
                <div class="notification is-success">
                    {{($.Render $.Form.Success ) | markdown}}
                </div>
            {{- end}}
            <br/>
            {{- if $.Form.HasCodeAccess}}
                <form method="post" action="{{$.Form.Name}}">
                    <input type="hidden" name="__access_code" value="{{.Code}}"/>
                    <input type="hidden" name="__fresh" value="true"/>
                    <input type="hidden" name="_xsrf" value="{{.XSRF}}"/>
                    <button class="button is-primary">send one more time..</button>
                </form>
            {{- else}}
                <a class="button is-primary" href="{{$.Form.Name}}">send one more time..</a>
            {{- end}}
        </div>
</section>
</body>
</html>